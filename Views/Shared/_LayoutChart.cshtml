@using DevStudio.Securitys;
@{
    string str_container = "container";
    if (MemberAccount.Role == EnumList.LoginRole.Admin) { str_container = "container-fluid"; }
}
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    @*<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">*@
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - @AppService.AppName</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jqueryval")
    <link href="@Url.Content("~/Content/themes/base/jquery-ui.min.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/bootstrap-datepicker.min.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/bootstrap-datepicker3.min.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/DataTables/css/jquery.dataTables.min.css")" rel="stylesheet" />
    <link href="@Url.Content("~/easion/css/easion.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" />
    <link href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" crossorigin="anonymous" rel="stylesheet" />
    <link href="@Url.Content("~/Content/font-awesome.min.css")" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Nunito:400,600|Open+Sans:400,600,700" rel="stylesheet" />
    <script src="@Url.Content("~/Scripts/jquery-3.6.0.min.js")"></script>
    <script src="@Url.Content("~/Scripts/jquery-ui-1.12.1.min.js")"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")"></script>
    <script src="@Url.Content("~/Scripts/umd/popper.min.js")"></script>
    <script src="@Url.Content("~/Scripts/bootstrap-datepicker.min.js")"></script>
    <script src="@Url.Content("~/Scripts/locales/bootstrap-datepicker.zh-TW.min.js")"></script>
    <script src="@Url.Content("~/Scripts/DataTables/jquery.dataTables.min.js")"></script>
    <script src="@Url.Content("~/Scripts/moment-with-locales.min.js")"></script>
    <script src="@Url.Content("~/easion/js/easion.js")"></script>
    <script src="@Url.Content("~/Scripts/Chart.min.js")"></script>
    <script src="@Url.Content("~/easion/js/chart-js-config.js")"></script>

    <link rel="icon" href="@Url.Content("~/small.ico")" />

    @RenderSection("styles", required: false)
    @RenderSection("scripts", required: false)

</head>
<body>

    <div class="navbar navbar-inverse navbar-fixed-top position-static">
        <div class="@str_container">
            @Html.Partial("~/Views/Shared/_PartialBannerHeader.cshtml")
            <div class="navbar-collapse ">
                <ul class="nav navbar-nav navbar-right">
                    @if (MemberAccount.Role == EnumList.LoginRole.Admin)
                    {
                        @*@Html.Partial("~/Views/Shared/_PartialMenuAdmin.cshtml")*@
                        @Html.Partial("~/Views/Shared/_PartialMenuCommon.cshtml")
                    }
                    @if (MemberAccount.Role == EnumList.LoginRole.Member)
                    {
                        @*@Html.Partial("~/Views/Shared/_PartialMenuMember.cshtml")*@
                        @Html.Partial("~/Views/Shared/_PartialMenuCommon.cshtml")
                    }
                    @if (MemberAccount.Role == EnumList.LoginRole.Guest)
                    {
                        @Html.Partial("~/Views/Shared/_PartialMenuGuest.cshtml")
                    }
                </ul>
            </div>
        </div>
    </div>
    @*<main class="dash-content">
            @RenderBody()
            <hr />
            @Html.Partial("~/Views/Shared/_PartialFooter.cshtml")
        </main>*@
    <div class="@str_container body-content">
        @RenderBody()
        <hr />
        @Html.Partial("~/Views/Shared/_PartialFooter.cshtml")
    </div>
</body>
</html>
